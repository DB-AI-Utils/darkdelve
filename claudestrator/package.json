{
  "name": "claudestrator",
  "version": "0.1.0",
  "description": "TUI dashboard for managing autonomous Claude Agent SDK tasks in Docker containers",
  "type": "module",
  "bin": {
    "claudestrator": "dist/index.js"
  },
  "scripts": {
